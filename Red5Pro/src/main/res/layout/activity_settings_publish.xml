<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c8c8c8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="节目名称"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:editable="true"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:id="@+id/settings_streamname" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="质量"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings_quality">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="低"
                android:button="@drawable/custom_radio_button"
                android:id="@+id/settings_quality_low" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中"
                android:checked="true"
                android:button="@drawable/custom_radio_button"
                android:id="@+id/settings_quality_medium" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高"
                android:button="@drawable/custom_radio_button"
                android:id="@+id/settings_quality_high" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:button="@drawable/custom_radio_button"
                android:id="@+id/settings_quality_other" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高级选项"
            android:elegantTextHeight="false"
            android:background="#00ffffff"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/more"
            android:id="@+id/advanced" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始直播"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#00ffffff"
                android:textStyle="bold"
                android:textColor="#e31900"
                android:id="@+id/submit" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>